<%= form_with model: @book, class: form_class do |f| %>

  <p><%= intro_text %></p>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name, class: "book-form__submit-btn" %>

<% end %>