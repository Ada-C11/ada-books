<h2>Form for editing an existing Book</h2>


<%= form_with model: @book, class: 'edit-book' do |f| %>

  <p>Please fill out this form to edit a new book</p>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save Book", class: "book-form__submit-btn" %>

<% end %>