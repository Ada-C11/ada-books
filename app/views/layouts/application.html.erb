<!DOCTYPE html>
<html>
  <head>
    <title>AdaBooks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Ada Books!</h1>
      <section>
      <%= link_to "All authors", authors_path %>
      <%= link_to "All books", books_path %>
        <%= link_to "Add book",
            new_book_path  %>
        <%= link_to "Add Author", new_author_path %>
      </section>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
